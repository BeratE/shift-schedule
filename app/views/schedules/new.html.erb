<% content_for :header_tags do %>
  <%= stylesheet_link_tag("schedules", :plugin => "shift_schedule") %>
  <%= javascript_include_tag("script", :plugin => "shift_schedule") %>
<% end %>

<div class="container">
  <div class="head">
    <h2 class="title"><%= l :add_new_title %>: <%= ": #{@curr_date.strftime("%V")}/#{@curr_date.year}" %></h2>
  </div>
  <div class="main">
    <div class="details">
      <% if @versions.empty? %>
        <h2><%= l :no_unsched_versions %></h2>
      <% end %>
    </div>
    <% unless @versions.empty? %>
      <div style="margin-left: 40px;">
          <table class="version_table">
            <tr>
              <th>Version</th>
              <th class="side_border">Name</th>
              <th>of Project</th>
            </tr>
            <% @versions.each do |v| %>
              <tr class="row" onclick="versionSelect(<%=(v.id).to_i%>)">
                <td><%= v.id %> </td>
                <td><%= v.name %></td>
                <td><%= v.pname %></td>
              </tr>
            <% end %>
          </table>
      </div>
    <% end %>

    <a href="/schedules" class="button"><%= l :back %></a>
  </div>
</div>

<%= form_tag "/schedules/create", method: "post", :id => 'version_form' do %>
  <input id="v_id" name="v_id" type="hidden" value="0"/>
<% end %>
